<!DOCTYPE html>
<html>
<head>
  <title>Update User</title>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body>
  <h1>Update Username</h1>
  <form onsubmit="updateUser(event)">
    <input type="number" placeholder="User ID" id="id" required><br>
    <input type="text" placeholder="New Username" id="newUsername" required><br>
    <button type="submit">Update</button>
  </form>
  <p id="message"></p>

  <script>
    async function updateUser(e) {
      e.preventDefault();
      const id = document.getElementById('id').value;
      const newUsername = document.getElementById('newUsername').value;

      try {
        const res = await axios.patch(`/users/${id}`, { newUsername });
        document.getElementById('message').innerText = res.data.message;
      } catch (err) {
        document.getElementById('message').innerText = err.response.data.message;
      }
    }
  </script>
</body>
</html>
